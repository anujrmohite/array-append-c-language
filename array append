#include <stdio.h>
#include <stdlib.h>
struct array
{
    int A[20];
    int size;
    int length;
};

void append(struct array *arr, int x)
{
    if (arr->length < arr->size)
    {
        arr->A[arr->length++]=x;
    }
}

void display(struct array arr)
{
    int i;
    printf("the array elements are->");
    for (i = 0; i < arr.length; i++)
    {
        printf("%d", arr.A[i]);
    }
}

int main()
{
    struct array arr = {{2, 3, 4, 5, 6}, 10, 8};
    display(arr);
    append(&arr,7);
    display(arr);
    return 0;
}
